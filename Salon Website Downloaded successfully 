        <script>
          document
            .getElementById("scrollToFooter")
            .addEventListener("click", function (event) {
              event.preventDefault();
              const footer = document.getElementById("contact");
              const offset = footer.getBoundingClientRect().top + window.scrollY;
    
              window.scrollTo({
                top: offset,
                behavior: "smooth",
              });
            });
        </script>
